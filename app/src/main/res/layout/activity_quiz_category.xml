<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.QuizCategory">
    
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <include
           layout="@layout/toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>
    
    
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_weight="8"
        android:padding="14dp"
        android:columnCount="1"
        android:rowCount="2"
        android:alignmentMode="alignMargins">
        <androidx.cardview.widget.CardView
            android:id="@+id/bangla_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="3dp"
            app:contentPadding="20dp"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/hind_siliguri_light"
                    android:paddingTop="10dp"
                    android:text="বাংলা"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/english_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="3dp"
            app:contentPadding="20dp"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="English"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:fontFamily="@font/hind_siliguri_light"
                    android:paddingTop="10dp"
                    android:textAlignment="center"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/gScience_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="3dp"
            app:contentPadding="20dp"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="সাধারণ বিজ্ঞান"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:fontFamily="@font/hind_siliguri_light"
                    android:paddingTop="10dp"
                    android:textAlignment="center"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/computer_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="3dp"
            app:contentPadding="20dp"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="কম্পিউটার"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:fontFamily="@font/hind_siliguri_light"
                    android:paddingTop="10dp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
</RelativeLayout>